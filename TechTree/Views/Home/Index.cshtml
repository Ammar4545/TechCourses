@using TechTree.Data;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> singnInManager;

@{
    ViewData["Title"] = "Home Page";
}

@if (singnInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4"> Welcome</h1>
    </div>

}
else
{
    <div class="text-center">
        <h1 class="display-4">Not Logged In</h1>
    </div>
}


<div class="modal fade" id="UserLoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserLoginPartial" />
</div>
<div class="modal fade" id="UserRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserRegistrationPartial">
</div>

@section Scripts{
    <script src="~/js/UserRegistration.js"></script>
    <script src="~/js/BootstrapAlert.js"></script>
    <script src="~/js/UserLogin.js" asp-append-version="true"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
