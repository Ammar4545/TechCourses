@model TechTree.Entities.CategoryItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CategoryItem</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input asp-for="CategoryId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="2" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MediaTypeId" class="control-label"></label>
                <select asp-for="MediaTypeId" class="form-control" asp-items="@Model.MediaType">
                    <option value="">--Plz Select a Media Type--</option>
                </select>
                <span asp-validation-for="MediaTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeItemRelease" class="control-label"></label>
                <input type="text" name="DateTimeItemRelease" id=" DateTimeItemRelease" value="@Model.DateTimeItemRelease.ToString("yyyy-MM-dd")" class="datepicker form-control" />
                <span asp-validation-for="DateTimeItemRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-categoryId="@Model.CategoryId">Back to List</a>
</div>

@section Scripts {

   
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("DateScriptsPartial");
        }
}
